<div>
  <div>
    <h4 class="employee-name">{{employee_name}}</h4>
    <ul>
      <li class="row">
        <p class="col-3 text-end" style="font-weight:bolder">Workplace:</p> <p class="col-4">{{work_name}}</p>
      </li>
      <li class="row">
        <p class="col-3 text-end" style="font-weight:bolder">Position:</p> <p class="col-4">{{position}}</p>
      </li>
    
    <a class="review col-3 text-end" href="/employees/{{id}}">{{comments.length}}
      {{format_plural "review" comments.length}}</a>
      <br>
    <a class='review col-3 text-end' href="/dashboard/edit/{{{id}}}" class="edit-link">Edit Employee</a>
  </div>
</div>

