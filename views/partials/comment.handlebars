<div class="comments">
  {{#each this}}
    <section class="comment">
      <div class="meta">
        {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
    <a href="/dashboard/edit/comment/{{{id}}}" class="edit">Edit Comment</a>
  {{/each}}
</div>