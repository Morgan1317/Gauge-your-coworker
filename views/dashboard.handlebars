<section class="text-center">
    <h2>Add a new employee</h2>

    <form class="new-employee-form row">
        <div class="col-12 row">
            <label class="col-md-4 text-end"for="employee-name">Name</label>
            <input class="col-md-6" type="text" name="employee-name" id ="employee-name">
        </div>
        <div class="col-12 row">
            <label class="col-md-4 text-end" for="work-name">Workplace</label>
            <input class="col-md-6" type="text" name="work-name" id="work-name" >
        </div>
        {{!-- TODO added position here as well since it is in the employee models --}}
          <div class="col-12 row">
            <label class="col-md-4 text-end" for="position">Position</label>
            <input class="col-md-6" type="text" name="position" id="position">
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if employees.length}}
<section>
    <h2>Employees You Added</h2>
    <ol>
        {{#each employees as |employee|}}
        <li>
            {{> employee-info employee}}
            <a href="/dashboard/edit/{{{id}}}" class="edit-link">Edit Employee</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-employee.js"></script>