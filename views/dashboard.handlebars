<section>
    <h2>Add a new employee</h2>

    <form class="new-employee-form row">
        <div>
            <label for="employee-name">Name</label>
            <input type="text" name="employee-name" id ="employee-name">
        </div>
        <div>
            <label for="work-name">Workplace</label>
            <input type="text" name="work-name" id="work-name" >
        </div>
        {{!-- TODO added position here as well since it is in the employee models --}}
          <div>
            <label for="position">Position</label>
            <input type="text" name="position" id="position">
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if employees.length}}
<section>
    <h2>Employees You Added</h2>
    <ol>
        {{#each employees as |employee|}}
        <li>
            {{> employee-info employee}}
            <a href="/dashboard/edit/{{employee_id}}" class="edit-link">Edit Employee</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-employee.js"></script>